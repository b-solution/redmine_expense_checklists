<%  if !@expense.blank? &&  @expense.checklists.any? # && User.current.allowed_to?(:view_checklists, @project) %>
<hr />
<div id="checklist">
  <div class="contextual">
    <%= link_to l("label_checklist_hide_closed"), '#', id: 'switch_link' %>
  </div>
  <p><strong><%=l(:label_checklist_plural)%></strong></p>

  <ul id="checklist_items">
  <% @expense.checklists.each do |checklist_item| %>
    <%= render :partial => 'checklists/checklist_item', :object => checklist_item %>

  <% end %>
  </ul>
</div>
  <%= javascript_tag do %>
    new Redmine.ExpenseChecklistToggle('<%= l("label_checklist_show_closed") %>', '<%= l("label_checklist_hide_closed") %>');
  <% end %>
<% end %>
